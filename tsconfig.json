{
    "compilerOptions": {
        "lib": [
            "ES6",
            "dom"
        ],
        "target": "ES6",
        "module": "CommonJS",
        "declaration": true,
        "declarationMap": true,
        "strict": true,
        "declarationDir": "lib/cjs",
        "forceConsistentCasingInFileNames": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "types": [
            "mocha"
        ],
        "paths": {
            "@topic-carousel/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src",
        "tests"
    ],
    "exclude": [
        "node_modules",
    ],
    "ts-node": {
        "files": true
    },
}