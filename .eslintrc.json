{
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "rules": {
        "prettier/prettier": "error",
        "@typescript-eslint/no-unused-vars": [
            "warn",
            {
                "argsIgnorePattern": "^_",
                "caughtErrorsIgnorePattern": "^_"
            }
        ]
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "root": true,
    "env": {
        "browser": true,
        "es6": true
    },
    "ignorePatterns": [
        "node_modules/",
        "dist/",
        "lib/",
        "public/",
        "config/"
    ]
}